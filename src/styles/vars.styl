@import "grid.styl";

// ====================================
// colors
// ====================================
$dark-black   = #2b2b2b
$black        = #404040
$grey100      = #f0f0f0
$grey200      = #f5f5f5
$grey300      = #e5e5e5
$grey500      = #a6a6a6
$red          = #f14805
$orange       = #ff6426
$orange200    = #ffe4d9
$orange900    = #f14806
$white        = #ffffff

// ====================================
// grid settings
// ====================================
column-width    = 70px
column-gutter   = 15px
column-count    = 12

container-width = ( column-width * column-count ) + ( column-gutter * 2 * ( column-count - 1 ) )

// ====================================
// helpers
// ====================================

transparentBG(){
  background-image: url("data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7");
}

sprite($url)
  background: url($url)
  width: image-width($url)
  height: image-height($url)