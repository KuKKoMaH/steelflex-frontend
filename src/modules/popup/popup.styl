.popup
  position: relative
  width: 600px
  margin: 0 auto
  background: $white
  border: 10px solid $grey200
  border-radius: 4px
  padding: 50px 35px 55px
  text-align: center

  :global(.mfp-close)
    position: absolute
    right: 0
    top: 0
    width: 50px
    height: 50px
    border: 10px solid $grey200
    border-top: 0
    border-right: 0
    border-radius: 0 0 0 4px
    font-size: 0
    text-align: center
    line-height: 40px

    &:active
      top: 0

    &:after
      content: ' '
      display: inline-block
      vertical-align: middle
      sprite('sprite-popup-close.png')

