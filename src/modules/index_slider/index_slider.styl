.wrapper
  height: 734px
  width: 100%
  overflow: hidden

  :global
    .slick-track,
    .slick-slide,
    .slick-list
      height: 100%

    .slick-dots
      position: absolute
      bottom: 124px
      left: 50%
      transform: translateX(-50%)
      margin: 0
      padding: 3px
      border: 1px solid $red
      border-radius: 11px
      font-size: 1px

      li
        display: inline-block
        vertical-align: top
        margin-left: 16px

        button
          display: inline-block
          vertical-align: top
          width: 16px
          height: 16px
          background: $white
          border-radius: 8px
          overflow: hidden
          text-indent: 9999px
          border: 0

        &:first-child
          margin-left: 0

        &.slick-active button
          background: $red


.slide
  position: relative
  overflow: hidden

.image
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)

.content
  position: absolute
  width: 100%
  left: 0
  bottom: 170px
  text-align: center
  color: $white
  line-height: 1.55

.title
  font-family: 'Magistral', sans-serif
  font-weight: bold
  font-size: 30px
  margin-bottom: 40px

  span
    color: $red

.text
  font-size: 16px
  margin-bottom: 25px