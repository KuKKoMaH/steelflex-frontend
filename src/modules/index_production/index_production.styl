.block
  background: $grey200

.wrapper
  wrapper()

.container
  container()
  padding-top: 1px
  margin-top: -50px
  margin-bottom: -50px

.contents
  position: relative
  background: #FFF
  border-radius: 0 0 5px 5px
  box-shadow: 0 3px 3px rgba(#000, 0.2)
  z-index:2

.headers
  height: 100px
  position: relative
  margin: 0 -5px
  cf()

.header
  width: 50%
  height: 100%
  float: left
  padding: 0 5px

  &_text
    height: 100%
    line-height: 100px
    border-radius: 5px 5px 0 0
    box-shadow: 0 3px 3px rgba(#000, 0.2)
    font-family: Magistral, sans-serif
    font-size: 32px
    text-align: center
    position: relative
    z-index: 1
    background: #f0f0f0

    &:after
      content ' '
      position: absolute
      top: 100%
      left: 0
      width: 100%
      height: 1px
      box-shadow 0 0 15px rgba(#000, 0.4)
      transition: all .2s ease-out

    &:hover:after
      opacity: 0

    ^[0]_active &
      background: #fff
      &:after
        display: none

.content
  position: absolute
  left: 0
  top: 0
  padding: 32px 30px 50px
  z-index: 0
  opacity: 0
  transition: all .2s ease-out
  cf()

  &_active
    position: relative
    opacity: 1
    z-index: 1

.gear,
.cube
  &:before
    content: ' '
    display: inline-block
    vertical-align: middle
    margin-right: 20px

.gear:before
  sprite('img/sprite-gear.png')

.cube:before
  sprite('img/sprite-cube.png')
