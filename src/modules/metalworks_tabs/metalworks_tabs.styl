.block
  text-align: center
  height: 0

.item
  position: relative
  display: inline-block
  vertical-align: middle
  margin: -16px 5px 0
  padding: 0 38px
  height: 50px
  line-height: 50px
  border-radius: 4px
  background: $grey300
  transition: all .1s ease-out
  cursor: pointer

.active
  background: $white
  box-shadow: 0 1px 3px rgba(0, 1, 1, 0.1)

  .arrow:after
    top: 0
    border-color: transparent transparent $white $white

.arrow
  transform: scale(2.5, 0.5)
  transform-origin: 50% 0
  position: absolute
  top: 100%
  left: 50%
  margin-left: -30px
  width: 60px
  height: 32px
  overflow: hidden

  &:after
    content: ""
    position: absolute
    width: 0
    height: 0
    margin-left: -23px
    top: -25px
    left: 50%
    border-style: solid
    border-width: 1em
    border-color: transparent transparent $grey300 $grey300
    transform-origin: 0 0
    transform: rotate(-45deg)
    box-shadow: -2px 2px 3px rgba(0,1,1,0.05)
    transition: all .1s ease-out

.text
  font-family: 'Magistral', sans-serif
  font-size: 18px
