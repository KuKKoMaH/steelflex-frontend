@import "../../../node_modules/magnific-popup/dist/magnific-popup.css"

.block
  spanFluid(12)

  :global
    .slick-dots
      display: block
      padding: 35px 0 60px
      margin: 0
      text-align: center

      li
        display: inline-block
        vertical-align: middle

        &.slick-active button
          background-color: $red

        button
          display: block
          width: 16px
          height: 16px
          margin: 0 8px
          background-color: #fff
          border-radius: 50%
          border: 0
          box-shadow: 0 1px 2px rgba(0, 1, 1, 0.15)
          font-size: 0

.title
  font-family: "Magistral", sans-serif
  font-weight: bold
  font-size: 24px
  margin-bottom: 35px

.gallery
  display: block