@import "../../../node_modules/magnific-popup/dist/magnific-popup.css"

.block
  spanFluid(12)

  :global
    .slick-dots
      display: block
      padding: 35px 0 60px
      margin: 0
      text-align: center

      li
        display: inline-block
        vertical-align: middle

        &.slick-active button
          background-color: $red

        button
          display: block
          width: 16px
          height: 16px
          margin: 0 8px
          background-color: #fff
          border-radius: 50%
          border: 0
          box-shadow: 0 1px 2px rgba(0, 1, 1, 0.15)
          font-size: 0

.title
  font-family: "Magistral", sans-serif
  font-weight: bold
  font-size: 24px
  margin-bottom: 35px

.gallery
  display: block

.image
  position: relative
  display: block

  &:before, &:after
    content: ''
    display: block
    position: absolute
    opacity: 0
    transition: all .1s ease-out

  &:before
    left: 0
    top: 0
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, 0.5)

  &:after
    sprite('../../img/sprite-zoom.png')
    left: 50%
    top: 50%
    margin-left: -9px
    margin-top: -9px

  &:hover
    &:before, &:after
      opacity: 1
