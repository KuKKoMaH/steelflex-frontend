@font-face
  font-family: 'Rouble'
  src: url('../fonts/Rouble-Regular.eot')
  src: url('../fonts/Rouble-Regular.eot') format('embedded-opentype'),
          url('../fonts/Rouble-Regular.woff2') format('woff2'),
          url('../fonts/Rouble-Regular.woff') format('woff')
  font-weight: normal
  font-style: normal

@font-face
  font-family: 'Magistral'
  src: url('../fonts/magistral-webfont.eot')
  src: url('../fonts/magistral-webfont.eot') format('embedded-opentype'),
          url('../fonts/magistral-webfont.woff2') format('woff2'),
          url('../fonts/magistral-webfont.woff') format('woff')
  font-weight: 500
  font-style: normal

@font-face
  font-family: 'Magistral'
  src: url('../fonts/magistral_bold-webfont.eot')
  src: url('../fonts/magistral_bold-webfont.eot') format('embedded-opentype'),
          url('../fonts/magistral_bold-webfont.woff2') format('woff2'),
          url('../fonts/magistral_bold-webfont.woff') format('woff')
  font-weight: 700
  font-style: normal

@font-face
  font-family: 'Magistral'
  src: url('../fonts/magistral_black-webfont.eot')
  src: url('../fonts/magistral_black-webfont.eot') format('embedded-opentype'),
          url('../fonts/magistral_black-webfont.woff2') format('woff2'),
          url('../fonts/magistral_black-webfont.woff') format('woff')
  font-weight: 900
  font-style: normal

html
  min-width: container-width + column-gutter * 2
  min-height: 100%
  position: relative

body
  margin: 0
  padding: 0
  font-family: 'Arimo', sans-serif
  color: $black

*, *:before, *:after
  box-sizing: border-box
  outline: none

a
  color: inherit
  text-decoration: none

input, textarea
  font-family: inherit

:global
  .r
    font-family: 'Rouble'
    display: inline

.hidden
  display: none